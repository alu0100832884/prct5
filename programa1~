PI = 3.14159265358979323846264338327950288
n = int(raw_input("introduce el valor de n , (n>0)"))
suma = 0
for i in range (1,n+1):
 b = ((i)/float(n))
 a = b-(1/float(n))
 xi = (i - 0.5)/float(n)
 fxi = (4/(1+xi**2))
 print "xi %f " % (xi)
 print "fxi %f " % (fxi)
 print a
 print b
 suma = suma + fxi
pi = suma / float(n)
print "pi %f" % (pi)
print "El numero PI con 35 decimales es %.35f" % (PI)